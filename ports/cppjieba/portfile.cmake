vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO yanyiwu/cppjieba
    REF "v${VERSION}"
    SHA512 09fda5fdef4dbd01151f6f69b67a56797484a335bc2f7ece4bed4b2dc50f84e6ff169b89a1fb61bf2c90b89b7f336be713e1a61034a76e90e798224d206c50c1
